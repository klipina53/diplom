@model diplom.Models.Trainer
@{
    ViewData["Title"] = Model.FullName;
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
            {
                <img src="@Model.PhotoUrl" class="img-fluid rounded" alt="@Model.FullName">
            }
            else
            {
                <img src="~/images/default-trainer.jpg" class="img-fluid rounded" alt="Тренер">
            }
        </div>
        <div class="col-md-8">
            <h1>@Model.FullName</h1>
            <h3>@Model.Specialization</h3>

            <div class="mt-4">
                <h4>Образование:</h4>
                <p>@Model.Education</p>
            </div>

            <div class="mt-3">
                <h4>Стаж работы:</h4>
                <p>@Model.Experience лет</p>
            </div>

            <div class="mt-3">
                <h4>Цена за занятие:</h4>
                <p>@Model.PricePerSession.ToString("C")</p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <h4>О тренере:</h4>
            <p>@Model.Description</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <a asp-action="Trainers" class="btn btn-secondary">Назад к списку</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Booking" asp-action="BookSession" asp-route-trainerId="@Model.Id"
                   class="btn btn-primary ml-2">Записаться</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary ml-2">
                    Войдите, чтобы записаться
                </a>
            }
        </div>
    </div>
</div>