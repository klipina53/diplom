<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Sport Club</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header>
        <h1>Спортивный клуб</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit">Выйти (@User.Identity.Name)</button>
            </form>
        }
        <nav>
            <a asp-controller="Home" asp-action="Index">Главная</a>
            <a asp-controller="Home" asp-action="Profile">Профиль</a>
            <a asp-controller="Home" asp-action="Trainers">Тренеры</a>
            <a asp-controller="Home" asp-action="Products">Товары</a>
            <a asp-controller="Home" asp-action="Memberships">Абонементы</a>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
