@using Microsoft.AspNetCore.Identity
@using diplom.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Добро пожаловать в наш спортивный клуб!";
    var isAuth = SignInManager.IsSignedIn(User);
    var user = await UserManager.GetUserAsync(User);
    var email = user?.Email;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #e0f7fa, #e1bee7);
            color: #333;
        }

        header {
            text-align: center;
            padding: 2rem 1rem;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 12px rgba(0,0,0,0.1);
        }

        h1 {
            margin: 0;
            font-size: 2rem;
        }

        .tabs {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
            gap: 1rem;
        }

        .tab-btn {
            background-color: #ffffffdd;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 1rem;
            font-weight: bold;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .tab-btn.active, .tab-btn:hover {
                background-color: #7e57c2;
                color: white;
                transform: scale(1.05);
            }

        .form-container {
            max-width: 400px;
            margin: 2rem auto;
            background: #fff;
            padding: 2rem;
            border-radius: 1.5rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

            .form-container.hidden {
                display: none;
            }

        .group {
            margin-bottom: 1rem;
        }

        .label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        .input, .button {
            width: 100%;
            padding: 0.75rem;
            border-radius: 0.75rem;
            border: 1px solid #ccc;
            font-size: 1rem;
        }

        .button {
            background: #7e57c2;
            color: white;
            font-weight: bold;
            border: none;
            transition: background 0.3s ease;
            cursor: pointer;
        }

            .button:hover {
                background: #5e35b1;
            }

        main {
            max-width: 800px;
            margin: 3rem auto;
            padding: 1rem;
            text-align: center;
            background: #ffffffbb;
            backdrop-filter: blur(6px);
            border-radius: 1rem;
        }

        .auth-status {
            margin-bottom: 1rem;
            font-weight: bold;
        }

        .error-message {
            color: red;
            font-weight: bold;
            margin-bottom: 1rem;
        }
    </style>

    <script>
        function switchTab(tabName) {
            const signIn = document.getElementById("signin-form");
            const signUp = document.getElementById("signup-form");
            const btnSignIn = document.getElementById("btn-signin");
            const btnSignUp = document.getElementById("btn-signup");

            if (tabName === "signin") {
                signIn.classList.remove("hidden");
                signUp.classList.add("hidden");
                btnSignIn.classList.add("active");
                btnSignUp.classList.remove("active");
            } else {
                signUp.classList.remove("hidden");
                signIn.classList.add("hidden");
                btnSignUp.classList.add("active");
                btnSignIn.classList.remove("active");
            }
        }

        document.addEventListener("DOMContentLoaded", () => {
        @if (!isAuth)
        {
            <text>switchTab("signin"); </text>
        }
                });
    </script>
</head>
<body>

    <header>
        <h1>@ViewData["Title"]</h1>
        @if (!isAuth)
        {
            <div class="tabs">
                <button id="btn-signin" class="tab-btn" onclick="switchTab('signin')">Авторизация</button>
                <button id="btn-signup" class="tab-btn" onclick="switchTab('signup')">Регистрация</button>
            </div>
        }
    </header>

    @if (isAuth)
    {
        <div class="form-container">
            <p class="auth-status">Вы вошли как: @email</p>
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button class="button" type="submit">Выйти</button>
            </form>
            <a class="button" href="/Home/Profile" style="margin-top: 10px; display: inline-block;">Перейти в профиль</a>
        </div>
    }
    else
    {
        <div id="signin-form" class="form-container">
            @if (TempData["LoginError"] != null)
            {
                <p class="error-message">@TempData["LoginError"]</p>
            }
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="group">
                    <label class="label" for="user">Email</label>
                    <input id="user" name="email" type="text" class="input" placeholder="Введите ваш email" required>
                </div>
                <div class="group">
                    <label class="label" for="pass">Пароль</label>
                    <input id="pass" name="password" type="password" class="input" placeholder="Введите пароль" required>
                </div>
                <div class="group">
                    <input id="check" name="rememberMe" type="checkbox">
                    <label for="check"> Запомнить меня</label>
                </div>
                <div class="group">
                    <button type="submit" class="button">Войти</button>
                </div>
            </form>
        </div>

        <div id="signup-form" class="form-container hidden">
            @if (TempData["RegisterError"] != null)
            {
                <p class="error-message">@TempData["RegisterError"]</p>
            }
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="group">
                    <label class="label" for="user-signup">Email</label>
                    <input id="user-signup" name="email" type="text" class="input" placeholder="Введите ваш email" required>
                </div>
                <div class="group">
                    <label class="label" for="pass-signup">Пароль</label>
                    <input id="pass-signup" name="password" type="password" class="input" placeholder="Введите пароль" required>
                </div>
                <div class="group">
                    <label class="label" for="pass-repeat">Повторите пароль</label>
                    <input id="pass-repeat" name="confirmPassword" type="password" class="input" placeholder="Повторите пароль" required>
                </div>
                <div class="group">
                    <label class="label" for="fullname">ФИО</label>
                    <input id="fullname" name="fullname" type="text" class="input" placeholder="Введите ваше ФИО" required>
                </div>
                <div class="group">
                    <button type="submit" class="button">Зарегистрироваться</button>
                </div>
            </form>
        </div>
    }

    <main>
        <h2>Наши услуги</h2>
        <p>Мы предлагаем широкий спектр спортивных услуг для всех возрастов и уровней подготовки. Присоединяйтесь к нам и начните свой путь к здоровому образу жизни!</p>
        <p>Наши тренеры — это профессионалы с большим опытом, готовые помочь вам достичь ваших целей. Независимо от ваших предпочтений, у нас есть всё необходимое для вашего успеха!</p>
    </main>

</body>
</html>